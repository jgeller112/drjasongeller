title = {{Rapid Release From Listening Effort Resulting From Semantic Context, and Effects of Spectral Degradation and Cochlear Implants.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/27698260 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5051669},
volume = {20},
